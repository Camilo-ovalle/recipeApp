<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/primary_orange">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasta Carbonara"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 de 9"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:alpha="0.9" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="100"
        android:progress="11"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/accent_orange"
        android:progressBackgroundTint="@color/light_gray" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Step Number Badge -->
            <TextView
                android:id="@+id/tv_step_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paso 1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/badge_my_recipe"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Step Instruction -->
            <TextView
                android:id="@+id/tv_step_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poner a hervir una olla grande con agua y sal."
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="32dp" />

            <!-- Timer Section -->
            <LinearLayout
                android:id="@+id/layout_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_card"
                android:padding="24dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_timer"
                    android:layout_marginBottom="16dp"
                    android:tint="@color/primary_orange" />

                <TextView
                    android:id="@+id/tv_timer_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_start_timer"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:text="Iniciar Timer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_primary_orange" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_previous_step"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Anterior"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:background="@drawable/button_transparent" />

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Siguiente"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_primary_orange" />

    </LinearLayout>

</LinearLayout>
